{
  "name": "some-tools",
  "version": "1.0.0",
  "description": "一些实用的 JavaScript 方法",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/toFrankie/Some-JavaScript-File.git"
  },
  "author": "Frankie <1426203851@qq.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "eslint:fix": "eslint --fix . --ext .js",
    "prettier:fix": "prettier --config .prettierrc.js --write './**/*.{js,css,html,json}'",
    "format": "npm-run-all -s prettier:fix eslint:fix",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "devDependencies": {
    "babel-eslint": "10.0.3",
    "commitizen": "4.2.1",
    "conventional-changelog-cli": "2.1.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "6.7.1",
    "eslint-config-alloy": "3.7.1",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.3.0",
    "lint-staged": "10.3.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "prettier-eslint-cli": "5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --config .prettierrc.js --write",
      "eslint --fix --ext .js"
    ],
    "*.{json,css,html}": "prettier --config .prettierrc.js --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
